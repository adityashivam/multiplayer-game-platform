{
  "type": "module",
  "name": "kaboom-fight",
  "version": "1.0.0",
  "description": "Multiplayer fighting game with Kaboom.js",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "node --watch server/server.js",
    "platform:dev": "vite --config public/platform/vite.config.js",
    "platform:build": "vite build --config public/platform/vite.config.js",
    "platform:preview": "vite preview --config public/platform/vite.config.js",
    "build:msgpack": "esbuild node_modules/socket.io-msgpack-parser/index.js --bundle --format=esm --outfile=public/platform/shared/msgpackParser.js --platform=browser --minify",
    "build": "npm run build:msgpack && npm run platform:build",
    "postinstall": "npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.18.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "socket.io": "^4.8.0",
    "socket.io-msgpack-parser": "^3.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "sass": "^1.97.1",
    "vite": "^7.3.0"
  }
}
